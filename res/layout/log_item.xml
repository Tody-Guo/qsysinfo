<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="wrap_content"
	android:paddingLeft="3dip">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/txt_head"
		android:singleLine="true" android:ellipsize="marquee"
		android:textSize="14dip"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/txt_msg"
		android:textSize="14dip" android:textColor="#ffcccccc"></TextView>
</LinearLayout>
